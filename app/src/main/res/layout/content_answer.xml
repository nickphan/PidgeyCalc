<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="With your"
        android:textSize="15dp">

    </TextView>
    <TextView
        android:id="@+id/pidgeysHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message1">

    </TextView>
    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="pidgeys, you will need"
        android:textSize="15dp"
        android:layout_below="@id/pidgeysHave">

    </TextView>
    <TextView
        android:id="@+id/candiesNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message2">

    </TextView>



    <TextView
        android:id="@+id/message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="With your"
        android:textSize="15dp"
        android:layout_below="@id/candiesNeed">

    </TextView>

    <TextView
        android:id="@+id/candiesHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message3">

    </TextView>

    <TextView
        android:id="@+id/message4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="candies, you will need"
        android:textSize="15dp"
        android:layout_below="@id/candiesHave">

    </TextView>

    <TextView
        android:id="@+id/pidgeysNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message4">

    </TextView>

    <TextView
        android:id="@+id/message5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Your most optimal rout is to catch"
        android:textSize="15dp"
        android:layout_below="@id/pidgeysNeed">

    </TextView>
    <TextView
        android:id="@+id/toCatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message5">

    </TextView>

    <TextView
        android:id="@+id/message6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="more pidgeys and transfer"
        android:textSize="15dp"
        android:layout_below="@id/toCatch">

    </TextView>
    <TextView
        android:id="@+id/toTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/message6">

    </TextView>
    <TextView
        android:id="@+id/message7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="of them"
        android:textSize="15dp"
        android:layout_below="@id/toTransfer">

    </TextView>
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/message7">
    </ImageView>
</RelativeLayout>